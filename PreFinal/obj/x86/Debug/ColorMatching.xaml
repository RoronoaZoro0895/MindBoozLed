<Page
    x:Class="PreFinal.ColorMatching"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PreFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Canvas Background="Beige">
        <Button x:Name="backButton" Margin="39,59,39,0"
                VerticalAlignment="Top"
                Width="Auto"
                BorderThickness="0"
                Height="Auto">
            <Image Source="assets/backIconBlack.png" Visibility="Visible" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>
        </Button>

        <Image Source="Assets/ColorMatching.png" Height="234" Width="778" Canvas.Left="222"/>
        <Grid 
                x:Name="grid"
                Canvas.Left="544"
                Canvas.Top="328">
            <Button Content="Start Game"
                Background="Transparent"
                Height="Auto"
                Width="Auto"
                FontSize="50"
                x:Name="btn"/>
        </Grid>

        <TextBox Text="0" Foreground="Black" BorderThickness="0" Canvas.Top="150" FontSize="80" Canvas.Left="1034" x:Name="score" Height="Auto" Width="Auto" RenderTransformOrigin="0.534,0.138"
                 Background="Transparent"/>
    </Canvas>
</Page>

